{
  "manifest_version": 3,
  "name": "JSON Formatter",
  "version": "1.0",
  "description": "Formats pages that start with a curly or square bracket as HTML.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
